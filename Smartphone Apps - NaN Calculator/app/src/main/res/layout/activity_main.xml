<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:text="Fahrenheit to Celsius Calculator"
        android:textSize="40sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Insert Fahrenheit"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/FahrenheitInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:text="0"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Insert Celsius"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <EditText
        android:id="@+id/CelsiusInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="0"
        android:inputType="number"
        android:minHeight="48dp"
        android:textSize="30sp"
        />


    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:shadowColor="@color/black"
        android:text="Convert"
        app:iconTint="#492D2D"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Fahrenheit to Celsius"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/CelsiusResult"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="Celsius"
        android:textSize="30sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:text="Celsius to Fahrenheit"
        android:textSize="20sp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/FahrenheitResult"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="Fahrenheit"
        android:textSize="30sp"
        android:textAlignment="center"
        />
</LinearLayout>
